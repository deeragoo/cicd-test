<!-- app/views/codes/index.html.erb -->

<h1>List of Codes</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Vended</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= code.id %></td>
        <td><%= code.vended ? 'Yes' : 'No' %></td>
        <td><%= code.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
